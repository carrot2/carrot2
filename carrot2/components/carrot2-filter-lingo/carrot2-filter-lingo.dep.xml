<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE component PUBLIC "-//Carrot2//DTD Component Dependency Descriptor V1.0//EN" "http://www.carrot2.org/dtd/component-dependency.dtd" >

<component
    name="carrot2-filter-lingo"
    description="Carrot2 Lingo Clustering filter">

    <provides profile="remote">
        <files build-path-exclude="true" prefix="tmp/dist">
            <file location="carrot2-filter-lingo.war" />
        </files>
        <build>
            <ant file="build.remote.xml" target="build" />
        </build>
		<check-newer>
			<fileset dir="src" />
			<fileset dir="web" />
		</check-newer>
    </provides>
	

    <provides profile="local">
        <files build-path-exclude="true" prefix="tmp/dist">
            <file location="carrot2-filter-lingo.jar" />
        </files>
        <build>
            <ant file="build.local.xml" target="build" />
        </build>
		<check-newer>
			<fileset dir="src" />
			<fileset dir="web" />
		</check-newer>
    </provides>
	

	<!-- Carrot2 components -->
    <dependency name="carrot2-license" />
	<dependency name="carrot2-util-common" />
	<dependency name="carrot2-local-core" />
    <dependency name="jama" />
    <dependency name="log4j" />
    <dependency name="violinstrings" />

	<dependency name="carrot2-util-remote" 	profile="remote" />
    <dependency name="dom4j"                profile="remote" />
    <dependency name="servlets-api"         profile="remote" nocopy="true" />

    <!-- These components are not required during the compilation, but
         are usually included at runtime via parameters (Language/ stemming/ stopwords) -->
    <dependency name="carrot2-util-tokenizer" profile="remote" />
    
	<dependency name="junit" profile="test" />
	<dependency name="servlets-api" profile="test" nocopy="true" />
	<dependency name="carrot2-util-remote" 	profile="test" />
    <dependency name="dom4j"                profile="test" />
</component>

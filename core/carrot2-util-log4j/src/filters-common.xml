
<!--
    Filtering of logs from common packages and libraries (prevent spamming the output).
-->

<!-- Catalina (Tomcat) -->
<logger name="org.apache.coyote"><level value="info"/></logger>
<logger name="org.apache.catalina"><level value="info"/></logger>
<logger name="org.apache.jasper"><level value="info"/></logger>
<logger name="org.apache.jk"><level value="info"/></logger>
<logger name="org.apache.tomcat"><level value="info"/></logger>

<!-- Apache commons -->
<logger name="org.apache.commons"><level value="warn"/></logger>
<logger name="org.apache.http"><level value="warn"/></logger>

<!-- Apache HTTPClient -->
<logger name="httpclient"><level value="warn"/></logger>

<!-- Apache HTTP components' client -->
<logger name="org.apache.http"><level value="warn"/></logger>

<!-- JETTY -->
<logger name="org.mortbay"><level value="warn"/></logger>
<logger name="jetty"><level value="warn"/></logger>
<logger name="org.eclipse.jetty"><level value="warn"/></logger>

<!-- Velocity -->
<logger name="org.apache.velocity"><level value="info" /></logger>

<!-- JAWR -->
<logger name="net.jawr"><level value="warn" /></logger>

<!--  HTMLUnit -->
<logger name="com.gargoylesoftware.htmlunit"><level value="warn" /></logger>

<!-- Silence Jetty's SelectChannelEndPoint if it's unable to dispatch request to the (full) threadpool. -->
<logger name="org.eclipse.jetty.io.nio">
    <level value="error" />
</logger>
